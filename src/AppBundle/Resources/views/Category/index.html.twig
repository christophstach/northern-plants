{% extends "::index.html.twig" %}

{% block title %}AppBundle:Category:index{% endblock %}

{% block body %}
<div class="row">
	<div class="box">
	    <div class="col-lg-12">
	        <hr>
	        <h2 class="intro-text text-center">Plants of
	            <strong>Northern Plants</strong>
	        </h2>
	        <hr>
	    </div>
        
        {% for category in categories %}
            <div class="col-sm-4 text-center">
                <a href="/category/{{ category.slug }}"><img class="img-responsive" src="{{ category.imgSrc }}" alt=""></a>
                <h3>{{ category.title }}</h3>
            </div>
        {% endfor %}
		
        <div class="clearfix"></div>
	</div>
</div>
{% endblock %}
