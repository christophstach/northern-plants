{% extends "::index.html.twig" %}

{% block title %}Plants{% endblock %}

{% block body %}
<div class="row">
	<div class="box">
	    <div class="col-lg-12">
	        <hr>
	        <h2 class="intro-text text-center">Plants of
	            <strong>Northern Plants</strong>
	        </h2>
	        <hr>
	    </div>
        
        {% for category in categories %}
            <div class="col-sm-4 text-center">
                {% if category.image %}
                    <a href="{{ path('app_plant_index', {'slug': category.slug}) }}">
                        <img class="img-responsive" src="{{ ('/assets/img/category/' ~ category.image) | imagine_filter('category') }}" alt="{{ category.title }}">
                    </a>
                {% else %}
                    <a href="{{ path('app_plant_index', {'slug': category.slug}) }}">
                        <img class="img-responsive" src="http://placehold.it/350x250" alt="{{ category.title }}">
                    </a>
                {% endif %}
                <h3>{{ category.title }}</h3>
            </div>
        {% endfor %}
		
        <div class="clearfix"></div>
	</div>
</div>
{% endblock %}