{% extends "::index.html.twig" %}

{% block title %}AppBundle:Plant:index{% endblock %}

{% block body %}
<div class="row">
	<div class="box">
	    <div class="col-lg-12">
			<h1>Welcome to the Plant:index page</h1>
			
			<table class="table">
				<caption>Plants</caption>
				<thead>
					<tr>
						<th style="width: 100%">Plant</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
			        {% for plant in plants %}
						<tr>
							<td>{{ plant.name }}</td>
							<td><a href="/plant/{{ plant.slug }}" class="btn btn-primary btn-sm">Show</a></td>
						</tr>
			        {% endfor %}
				</tbody>
			</table>
		</div>
	</div>
</div>
{% endblock %}
