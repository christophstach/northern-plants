{% extends "::index.html.twig" %}

{% block title %}{{ category.title }}{% endblock %}

{% block body %}
<div class="row">
	<div class="box">
	
        <div class="col-lg-12">
            <hr>
            <h2 class="intro-text text-center">{{ category.title }}</h2>
            <hr>
        </div>
		
        <div class="col-lg-12">
			{{ category.description|md2html }}
        </div>
		
	    <div class="col-lg-12">
			
			<table class="table" style="margin-top: 20px;">
				<tbody>
			        {% for plant in category.plants %}
						<tr>
							<td style="width: 100%;">{{ plant.name }}</td>
							<td><a href="{{ path('app_plant_show', {'slug': plant.slug}) }}" class="btn btn-primary btn-sm">Show</a></td>
						</tr>
			        {% endfor %}
				</tbody>
			</table>
		</div>
	</div>
</div>
{% endblock %}
