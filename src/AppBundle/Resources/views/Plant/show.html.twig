{% extends "::index.html.twig" %}

{% block title %}{{ plant.name }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="box">
            <div class="col-lg-12">
                <hr>
                <h2 class="intro-text text-center">{{ plant.name }}</h2>
                <hr>
            </div>
            <div class="col-md-6">
                {% if plant.image %}
                    <img class="img-responsive img-border-left" src="/assets/img/plant/{{ plant.image }}" alt="{{ plant.name }}">
                {% else %}
                    <img class="img-responsive img-border-left" src="http://placehold.it/800x600" alt="{{ plant.name }}">
                {% endif %}
            </div>
            <div class="col-md-6">
				{{ plant.description|md2html }}
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
{% endblock %}
